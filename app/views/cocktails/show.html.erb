<h1><%= @cocktail.name.capitalize %></h1>
<div style="float:left">
  <p>Ingredients</p>
</div>
<div style="float:right">
  <%= link_to "", new_cocktail_dose_path(@cocktail), {class: 'fa fa-plus-square-o'}%>
  <span style="color:white">...</span>
</div>
<div class="list-group">
  <% @cocktail.doses.each do |dose|%>
    <button type="button" class="list-group-item">
      <div style="float:left">
        <%= dose.description.capitalize%> - <%= dose.ingredient.name.capitalize%>
      </div>
      <div style="float:right">
        <%= link_to "", dose_path(dose), :method => :delete, :class => 'fa fa-trash-o'%>
      </div>
    </button>
  <% end %>
</div>



